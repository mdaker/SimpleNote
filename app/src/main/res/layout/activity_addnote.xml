<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.daqer.simplenote.AddnoteActivity">

    <TextView
        style="@style/headText"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="54dp"
        android:text="عنوان الملاحظة"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        style="@style/headText"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titleTxt"
        android:layout_alignRight="@+id/titleTxt"
        android:layout_below="@+id/titleTxt"
        android:text="الوصف"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:width="300dp"
        android:background="@drawable/border_text"
        android:gravity="right" />

    <EditText
        android:id="@+id/descTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:width="300dp"
        android:height="200dp"
        android:maxLines="10"
        android:minLines="10"
        android:background="@drawable/border_text"
        android:gravity="right" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="saveBtnClick"
        android:text="حفظ الملاحظة" />

</RelativeLayout>
